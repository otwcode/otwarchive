<h2 class="heading">
  <%= ts("Kudos on %{work_link}", work_link: link_to(@work.title, @work)).html_safe %>
</h2>

<div id="kudos">
  <% if @kudos.length > 0 || @guest_kudos_count > 0 %>
    <% cache "#{@work.cache_key}/kudos/full-v2", skip_digest: true do %>
      <p class="kudos">
        <%= @kudos.map { |kudo| link_to kudo.user.login, kudo.user }
          .to_sentence.html_safe %>
        <% if @guest_kudos_count > 0 %>
          <% if @kudos.length > 0 %>
            <%= ts(" as well as ") %>
          <% end %>
          <%= ts(pluralize(@guest_kudos_count, 'guest')) %>
        <% end %>
        <%= ts(" left kudos on this work!") %>
      </p>
    <% end %>
  <% end %>
</div>
