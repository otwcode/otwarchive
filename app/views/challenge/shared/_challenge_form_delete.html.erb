<ul class="navigation actions" role="menu">
  <% if @collection.challenge %>
    <li><%= link_to ts("Delete Challenge"),
                    if @collection.prompt_meme?
                      collection_prompt_meme_path(@collection)
                    else
                      collection_gift_exchange_path(@collection)
                    end,
                    data: {confirm: ts('Are you certain you want to delete the challenge from this collection? All signups, assignments, and settings will be lost. (Works will remain in the collection.)')},
                    :method => :delete %></li>
  <% end %>
</ul>
