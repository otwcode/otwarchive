<% content_for :message do %>
<%= t("mailer.general.greeting.formal.addressed_html", name: @resource.login) %>

<%= t(".intro", app_name: ArchiveConfig.APP_SHORT_NAME) %>

<%= t(".instructions.text", count: ArchiveConfig.DAYS_UNTIL_RESET_PASSWORD_LINK_EXPIRES,
      choose_new_password_url: edit_user_password_url(reset_password_token: @token),
      new_password_reset_url: new_user_password_url, contact_support_url: new_feedback_report_url) %>

<%= t(".ignore_if_not_requested.text") %>

<%= t(".reset_emails_clarification.text",
      app_name: ArchiveConfig.APP_SHORT_NAME,
      choose_new_password_url: edit_user_password_url(reset_password_token: @token),
      change_your_password_url: change_password_user_url(@user)) %>

<%= t(".contact_policy_abuse_instructions.text", app_name: ArchiveConfig.APP_SHORT_NAME, contact_policy_abuse_url: new_abuse_report_url) %>

<% end %>
