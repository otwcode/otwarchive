<%= form_for(User.new, url: new_user_session_path) do |f| %>
  <dl>
    <dt><%= f.label :login, t(".username_or_email") %></dt>
    <dd><%= f.text_field :login %></dd>
    <dt><%= f.label :password, t(".password") %></dt>
    <dd><%= f.password_field :password %></dd>
    <dt><%= f.label :remember_me, t(".remember_me") %></dt>
    <dd><%= f.check_box :remember_me %></dd>
    <dt class="landmark"><%= t(".landmark_submit") %></dt>
    <dd class="submit actions">
      <%= f.submit t(".log_in"), class: "submit" %>
    </dd>
  </dl>
<% end %>
