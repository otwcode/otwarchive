<% if params[:restricted] %>
  <h3 class="heading"><%= ts("Sorry!") %></h3>
  <p>
    <%= ts("This work is only available to registered users of the Archive.") %>
    <%= ts("If you already have an Archive of Our Own account, log in now.") %>
      <% if @admin_settings.invite_from_queue_enabled? && @admin_settings.creation_requires_invite? %>
        <%= ts("If you don't have an account, you can") %> <%= link_to ts("request an invitation"), invite_requests_path %> <%= ts("to join.") %>
      <% elsif @admin_settings.account_creation_enabled? && !@admin_settings.creation_requires_invite? %>
        <%= link_to ts("Or join us for free - it's easy."), new_user_path %>
    <% end %>
  </p>
  </p>
<% elsif params[:restricted_commenting] %>
  <h3 class="heading"><%= ts("Sorry!") %></h3>
  <p>
    <%= ts("Commenting on this work is only available to registered users of the Archive.") %>
    <%= ts("If you already have an Archive of Our Own account, log in now.") %>
    <% if @admin_settings.invite_from_queue_enabled? && @admin_settings.creation_requires_invite? %>
      <%= ts("If you don't have an account, you can") %> <%= link_to ts("request an invitation"), invite_requests_path %> <%= ts("to join.") %>
    <% elsif @admin_settings.account_creation_enabled? && !@admin_settings.creation_requires_invite? %>
      <%= link_to ts("Or join us for free - it's easy."), new_user_path %>
  <% end %>
  </p>
<% else %>
  <h3 class="heading"><%= ts("Log in") %></h3>
  <p>
    <strong><%= ts("Reminder:") %></strong>
    <%= ts("This site is in beta. Things may break or crash without notice.") %>
    <%= ts("Please report any pesky bugs and") %>
    <%= link_to ts("give us your feedback"), feedbacks_path %>!
  </p>
<% end %>

<div id="loginform">
  <%= render "users/sessions/passwd" %>
</div>

<p>
  <%= ts("Forgot your password or user name?") %> <%= link_to ts("Reset password"), new_password_path %>
  <% if @admin_settings.invite_from_queue_enabled? && @admin_settings.creation_requires_invite? %>
    <br \><%= ts("Don't have an account?") %> <%= link_to ts("request an invitation"), invite_requests_path %> <%= ts("to join") %>
  <% elsif @admin_settings.account_creation_enabled? && !@admin_settings.creation_requires_invite? %>
    <br \><%= ts("Don't have an account?") %> <%= link_to ts("Create an account now."), new_user_path %>
<% end %>
</p>
