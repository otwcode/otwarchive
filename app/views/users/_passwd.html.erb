<dl>
  <!-- Login -->
  <dt>
    <%= f.label :login, ts("User Name") %>
  </dt>
  <dd>
    <%= f.text_field :login, :class => "user_login" %>
    <%= live_validation_for_field('user_login', 
        :maximum_length => User::LOGIN_LENGTH_MAX, 
        :minimum_length => User::LOGIN_LENGTH_MIN, 
        :failureMessage => ts("You need a login name! (At least %d letters long, please.)") % [User::LOGIN_LENGTH_MIN]) %>
    <p class="footnote"><%= ts("%d to %d characters, using A-Z, a-z, 0-9, or _ and it must begin or end with a letter or number") % [User::LOGIN_LENGTH_MIN, User::LOGIN_LENGTH_MAX] %></p>
  </dd>
  <!-- Password -->
  <dt>
    <%= f.label :password, ts("Password") %>
  </dt>
  <dd>
    <%= f.password_field :password  %>
    <%= live_validation_for_field('user_password',
          :maximum_length => User::PASSWORD_LENGTH_MAX, 
          :minimum_length => User::PASSWORD_LENGTH_MIN,
          :failureMessage => ts("Please enter a password! (At least %d letters long, please.)") % [User::PASSWORD_LENGTH_MIN]) %>
    <p class="footnote"><%= ts("%d to %d characters") % [User::PASSWORD_LENGTH_MIN, User::PASSWORD_LENGTH_MAX] %></p>
  </dd>
  <!-- Confirm password -->
  <dt><%= f.label :password_confirmation, ts("Confirm Password") %></dt>
  <dd>
    <%= f.password_field :password_confirmation %>
    <%= live_validation_for_field('user_password_confirmation',
          :maximum_length => User::PASSWORD_LENGTH_MAX, 
          :minimum_length => User::PASSWORD_LENGTH_MIN,
          :failureMessage => ts("Please enter the same password in both fields.")) %>
  </dd>
  <!-- Email -->
  <dt>
    <%= f.label :email, ts("Valid Email") %>
  </dt>
  <dd><%= f.text_field :email %></dd>
</dl>
