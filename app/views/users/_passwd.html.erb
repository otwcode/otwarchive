<dl>
  <!-- Login -->
  <dt>
    <%= f.label :login, ts("User Name") %>
  </dt>
  <dd>
    <%= f.text_field :login, :class => "user_login" %>
    <%= live_validation_for_field('user_login', 
        :maximum_length => ArchiveConfig.LOGIN_LENGTH_MAX,
        :minimum_length => ArchiveConfig.LOGIN_LENGTH_MIN,
        :failureMessage => ts("You need a user name! (At least %{minimum} letters long, please.)",
                              :minimum => ArchiveConfig.LOGIN_LENGTH_MIN)) %>
    <p class="footnote">
      <%= ts("%{minimum} to %{maximum} characters (A-Z, a-z, _, 0-9 only), no spaces, cannot begin or end with underscore (_)",
             :minimum => ArchiveConfig.LOGIN_LENGTH_MIN,
             :maximum => ArchiveConfig.LOGIN_LENGTH_MAX) %>
    </p>
  </dd>
  <!-- Password -->
  <dt>
    <%= f.label :password, ts("Password") %>
  </dt>
  <dd>
    <%= f.password_field :password  %>
    <%= live_validation_for_field('user_password',
          :minimum_length => ArchiveConfig.PASSWORD_LENGTH_MIN,
          :maximum_length => ArchiveConfig.PASSWORD_LENGTH_MAX,
          :failureMessage => ts("Please enter a password! (At least %{minimum} letters long, please.)",
                                :minimum => ArchiveConfig.PASSWORD_LENGTH_MIN)) %>
    <p class="footnote"><%= ts("%{minimum} to %{maximum} characters",
                               :minimum => ArchiveConfig.PASSWORD_LENGTH_MIN,
                               :maximum => ArchiveConfig.PASSWORD_LENGTH_MAX) %></p>
  </dd>
  <!-- Confirm password -->
  <dt><%= f.label :password_confirmation, ts("Confirm Password") %></dt>
  <dd>
    <%= f.password_field :password_confirmation %>
    <%= live_validation_for_field('user_password_confirmation',
          :minimum_length => ArchiveConfig.PASSWORD_LENGTH_MIN,
          :maximum_length => ArchiveConfig.PASSWORD_LENGTH_MAX,
          :failureMessage => ts("Please enter the same password in both fields.")) %>
  </dd>
  <!-- Email -->
  <dt>
    <%= f.label :email, ts("Valid Email") %>
  </dt>
  <dd><%= f.text_field :email %></dd>
</dl>
