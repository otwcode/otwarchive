<!--SUSPECT THIS OF BEING COLLECTION HOME ZONE-->
<h2 class="heading">Assignments for <%= @collection.title %></h2>

<ul class="navigation actions" role="navigation">
  <li><%= span_if_current ts("Pinch Hits"), collection_assignments_path(@collection, :defaulted => true) %></li>
  <li><%= span_if_current ts("Unposted"), collection_assignments_path(@collection, :unfulfilled => true) %></li>
  <% if @collection.moderated? %>
    <li><%= span_if_current ts("Awaiting Approval"), collection_items_path(@collection) %>
    <li><%= span_if_current ts("Approved"), collection_assignments_path(@collection, :fulfilled => true) %></li>
  <% else %>
    <li><%= span_if_current ts("Completed"), collection_assignments_path(@collection, :fulfilled => true) %></li>
  <% end %>
  <li role="button">
    <%= link_to "Default All Incomplete", default_all_collection_assignments_path(@collection),
                :confirm => "Are you sure? This will mark all unposted or unapproved assignments in the challenge as defaulting." %>
  </li>
  <li role="button"><%= link_to ts("Purge Assignments"), purge_collection_assignments_path(@collection), 
          :confirm => ts("This will delete ALL assignments so you can edit and send them over. Please do not do this unless you absolutely must!") %>
  </li>
</ul>

<h3 class="heading"><%= ts("Assignments") %> <%= link_to_help 'challenge-assignments' %></h3>

<% if params[:defaulted] %>
  <%= render "maintainer_index_defaulted" %>
<% elsif params[:unfulfilled] %>
  <%= render "maintainer_index_unfulfilled" %>
<% elsif params[:fulfilled] %>
  <%= render "maintainer_index_fulfilled" %>
<% else %>
  <p class="note">
    Please select one of the options to review assignments for this challenge.
  </p>
  <!--BACK END, strongly suggest you have one of the options showing (some content) on this page (Awaiting Approval?) instead of this note!!-->
<% end %>

<%= will_paginate @assignments %>
