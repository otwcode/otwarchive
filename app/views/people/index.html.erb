<!--Descriptive page name, messages and instructions-->
<% if @collection %>
  <h2><%= authors_header @authors %> <%= "in" %> '<%= (params[:letter] && params[:letter].is_a?(String)) ? params[:letter] : @pseuds_alphabet[0] %>' <%= ts("in %{collection}", :collection => @collection.title) %></h2>
  
<!--subnav-->
<h3 class="landmark">Next Page Navigation</h3>
  <%= alpha_paginated_section @pseuds_alphabet %>
  <%= paginated_section @authors do %>
  <!--/subnav-->
 
<!--main content-->
  <ol class="pseud index">
    <% @authors.each do |author| %>
      <%= render 'author_blurb', :author => author %>
    <% end %>
  </ol>
  <% end %>
  <!--/content-->
  
<!--subnav-->
<h3 class="landmark">Next Page Navigation</h3>
<%= alpha_paginated_section @pseuds_alphabet %>
<% else %>
  <div class="pagination">
  <% for character in @navigation %>
    <a href="<%= person_path(character) %>"><%= character.char %></a>
  <% end %>
  </div>
  <p class="navigation"><%= link_to "People Search (Alpha)", search_people_path %></p>
<% end %>
