<% content_for :message do %>
<% @commentables.each_with_index do |commentable, index| %>
<%
  commentable_key = "#{commentable.class.name}_#{commentable.id}"
  givers_list = @kudo_givers["#{commentable_key}"].to_sentence
  commentable_link = "\"#{commentable.commentable_name.html_safe}\" (#{polymorphic_url(commentable)})".html_safe
  kudo_count = @kudo_counts["#{commentable_key}"].to_i
  single_guest_only = @single_guest_only["#{commentable_key}"]
%>

<% if single_guest_only == "true" %>
<%= t("mailer.kudos.text.left_kudos.single_guest", commentable_link: commentable_link) %>
<% else %>
<%= t("mailer.kudos.text.left_kudos", givers_list: givers_list, commentable_link: commentable_link, count: kudo_count) %>
<% end %>

<% if (index < @commentables.length - 1) %>
<%= text_divider %>
<% end %>
<% end %>
<% end %>
