<% content_for :message do %>

    <% @commentables.each_with_index do |commentable, index| %>
        <%
           givers_list = @kudo_givers["#{commentable.class.name}_#{commentable.id}"].html_safe
           commentable_link = style_link(commentable.commentable_name.html_safe, polymorphic_url(commentable))
        %>

        <%= t 'mailer.kudos.left_kudos_html', givers_list: givers_list, commentable_link: commentable_link.html_safe %>

        <% if (index < @commentables.length-1) %>
            <%= styled_divider %>
        <% end %>

    <% end %>

<% end %>
