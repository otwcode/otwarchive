<% content_for :message do %>

  <% @commentables.each_with_index do |commentable, index| %>
    <%
      commentable_key = "#{commentable.class.name}_#{commentable.id}"
      givers_list = @kudo_givers["#{commentable_key}"].
        map { |k| style_bold(k) }.
        to_sentence.html_safe
      commentable_link = style_creation_link(commentable.commentable_name.html_safe, polymorphic_url(commentable))
      kudo_count = @kudo_counts["#{commentable_key}"].to_i
      single_guest_only = @single_guest_only["#{commentable_key}"]
    %>

    <% if single_guest_only == "true" %>
      <%= t("mailer.kudos.html.left_kudos.single_guest", commentable_link: commentable_link.html_safe).html_safe %>
    <% else %>
      <%= t("mailer.kudos.html.left_kudos", givers_list: givers_list, commentable_link: commentable_link.html_safe, count: kudo_count).html_safe %>
    <% end %>

    <% if (index < @commentables.length - 1) %>
      <%= styled_divider %>
    <% end %>

  <% end %>
<% end %>
