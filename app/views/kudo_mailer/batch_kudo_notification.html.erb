<% content_for :message do %>

  <% @commentables.each_with_index do |commentable, index| %>
  
    <% givers_list = @kudo_givers["#{commentable.class.name}_#{commentable.id}"] %>
    <%= givers_list.each_with_index.map {|g,i| style_bold((g == "a guest" && i == 0) ? g.capitalize : g)}.to_sentence.html_safe %> 
    left kudos on
    
    <b><i><%= style_link(commentable.commentable_name.html_safe, polymorphic_url(commentable)) %></i></b>.
    
    <% if (index < @commentables.length-1) %>
      <%= styled_divider %>
    <% end %>
    
  <% end %>
  
<% end %>