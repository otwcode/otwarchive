<!--Descriptive page name, messages and instructions-->
<h2 class="heading"><%= ts("Delete External Work") %></h2>

<!--main content-->
<%= form_for(@external_work, :html => {:method => :delete, :class => "simple destroy"}) do |f| %>
  <p class="caution notice">
    <%= ts('Are you sure you want to <strong><em>delete</em></strong> "%{external_work_title}"?', :external_work_title => @external_work.title).html_safe %>
  </p>
  <p class="actions">
    <%= f.submit ts("Yes, Delete External Work") %>
  </p>
<% end %>
<!--/content-->
