          <% if current_user == @user %>
            <% if related_work.reciprocal? %>
              <td><%= link_to "Remove", related_work %></td>
            <% else %>
              <td><%= link_to "Approve", related_work %></td>
            <% end %>
          <% end %>
        <% end %>
      </tr>
