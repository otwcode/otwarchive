<h2 class="heading"><%= ts('Site Map') %></h2>
<div class="userstuff">
  <h3 class="heading">Explore</h3>
	  <ul>
	    <li><%= link_to ts("Homepage"), root_path %></li>
	    <li><%= link_to ts("Fandoms"), media_path %></li>
	    <li><%= link_to ts("Recent Works"), works_path %></li>
	    <li><%= link_to ts("People"), people_path %></li>
	    <li><%= link_to ts("Bookmarks"), bookmarks_path %></li>
	    <li><%= link_to ts("Additional Tags Cloud"), tags_path %></li>
	    <li><%= link_to ts("Languages"), languages_path %></li>
	    <li><%= link_to ts("Collections and Challenges"), collections_path %></li>
	  </ul>
	
  <h3 class="heading">About the Archive of Our Own</h3>
	  <ul>
		  <li><%= link_to ts("Terms of Service"), tos_path %></li>
		<li><%= link_to ts("Archive FAQ"), archive_faqs_path %></li>
		  <li><%= link_to ts("AO3 News"), admin_posts_path %></li>
		  <li><%= link_to ts("Known Issues"), known_issues_path %></li>
		  <li>The Archive of Our Own is a project of the <a href="http://transformativeworks.org"><acronym title="Organization for Transformative Works">OTW</acronym></a></li>
	  </ul>
	
  <% if logged_in? %>
    <h3 class="heading">Access your account</h3>
	    <ul>
		   <li><%= link_to ts("My Home"), user_path(current_user) %></li>
		    <li><%= link_to ts("Post New"), new_work_path %></li>
		    <li><%= link_to ts("My Works"), user_works_path(current_user) %></li>
		    <li><%= link_to ts("Drafts"), drafts_user_works_path(current_user) %></li>
		    <li><%= link_to ts("My Series"), user_series_index_path(current_user) %></li>
		    <li><%= link_to ts("My Bookmarks"), user_bookmarks_path(current_user) %></li>
		    <li><%= link_to ts("My Collections and Challenges"), user_collections_path(current_user) %></li>
		    <li><%= link_to ts("My Inbox"), user_inbox_path(current_user) %></li>
		    <% if current_user.preference.history_enabled? %>
		      <li><%= link_to ts("My History"), user_readings_path(current_user) %></li>
		    <% end %>
		    <li><%= link_to ts("My Subscriptions"), user_subscriptions_path(current_user) %></li>
		    <li><%= link_to ts("Set My Preferences"), user_preferences_path(current_user) %>
	    </ul>
	
	  <h3 class="heading">Change your account settings</h3>
	    <ul>
      <li><%= link_to ts("Edit My Profile"), edit_user_path(current_user) %></li>
      <li><%= link_to ts("My Profile"), user_profile_path(current_user) %></li>
      <li><%= link_to ts("Manage My Pseuds"), user_pseuds_path(current_user) %></li>
      <li><%= link_to ts("Delete My Account"), @user, :confirm => ts('This will permanently delete your account and cannot be undone. Are you sure?'), :method => :delete %></li>
	  </ul>
  <% end %>
	
  <h3 class="heading">Contact Us</h3>
	  <ul>
		  <li><%= link_to ts("Support and Feedback"), new_feedback_report_path %></li>
		  <li><%= link_to ts("Report Abuse"), new_abuse_report_path %></li>
      <li><%= link_to ts("Donations"), donate_path %></li>
	  </ul>
</div>
	