<div class="mystery header module">
  <h4 title="title"><%= item.is_a?(Work) ? ts("Mystery Work") : ts("Mystery Series") %></h4>
  <% if item.is_a?(Work) %>
    <h5><%= h(ts("Part of ")) + (unrevealed ? item.collections.unrevealed : item.collections.anonymous).map {|challenge| link_to(challenge.title, collection_path(challenge))}.join(", ").html_safe %></h5>
  <% end %>
</div>
<h6 class="landmark">Summary</h6>
<blockquote class="userstuff summary" title="summary">
  <% if unrevealed %>
    <p><%= ts("This is part of an ongoing challenge and will be revealed soon!") %></p>
  <% else # anonymous %>
    <%= ts("This is part of an ongoing anonymous challenge. You can read the stories in the challenge now, and the authors will be revealed soon.") %>
  <% end %>
</blockquote>
