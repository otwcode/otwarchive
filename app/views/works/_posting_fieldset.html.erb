<fieldset>
  <legend><%= t(".legend") %></legend>

  <p class="notice">
    <%= t(".post_notice_html",
          content_policy_link: link_to(t(".content_policy"), content_path),
          tos_faq_link: link_to(t(".tos_faq"), tos_faq_path(anchor: "content_faq"))) %>
  </p>

  <ul class="actions">
    <% unless @work.posted? %>
      <li><%= submit_tag t(".actions.save_draft"), name: "save_button" %></li>
    <% end %>

    <% if @preview_mode %>
      <li><%= submit_tag t(".actions.edit"), name: "edit_button" %>
    <% else %>
      <li><%= submit_tag t(".actions.preview"), name: "preview_button" %></li>
    <% end %>

    <%# Update if work is already posted, Post if it's not. %>
    <% if @work.posted? %>
      <li><%= submit_tag t(".actions.update"), name: "update_button" %></li>
    <% else %>
      <li><%= submit_tag t(".actions.post"), name: "post_button", data: { disable_with: t(".actions.please_wait") } %></li>
    <% end %>

    <li><%= link_to t(".actions.cancel"), @work.new_record? ? user_works_path(current_user) : work_path(@work) %></li>
  </ul>

</fieldset>
