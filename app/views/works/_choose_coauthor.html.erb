<p class="message"><%= t('.coauthor_verify', :default => 'Please verify the names of your co-authors') %></p>

<%= form_for(@work) do |f| %>
  
  <%= render :partial => 'pseuds/coauthor_form', :locals => {:creation => @work, :form => f} %>
  
  <%= render :partial => 'hidden_fields', :locals => {:form => f} %>

  <p class="submit cancel actions">
    <%= submit_tag t('.forms.preview', :default => 'Preview'), :name => 'preview_button' %>
    <%= submit_tag t('.forms.cancel', :default => 'Cancel'), :name => 'cancel_coauthor_button' %> 
  </p>

<% end %>