<%= form_tag url_for(:controller => 'works', :action => 'search'), :class => 'search', :id => 'search', :method => :get do %>
  <fieldset>
	<legend>Search works</legend>
	<p><%= text_field_tag "query[text]", nil, :class => 'text', :title => 'site search', :id => 'site_search' %>
	<span class="tip">tip: <%= random_search_tip %></span>
  <span class="submit actions"><%= submit_tag t('.forms.search', :default => 'search'), :class => 'button', :name => nil %></span></p>
  </fieldset>
<% end %>
