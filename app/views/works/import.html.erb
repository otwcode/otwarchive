<h2 class="heading"><%= t(".page_heading") %></h2>

<% if @works && !@works.empty? %>
  <p>
    <%= t(".success") %>
  </p>
  <ul class="index group">
    <% for work in @works %>
      <% if work.posted? %>
        <li><%= link_to(work.title, work_path(work)) %></li>
      <% else %>
        <li><%= t(".draft_work_title_html", work_link: link_to(work.title, preview_work_path(work))) %></li>
      <% end %>
    <% end %>
  </ul>

<% end %>


