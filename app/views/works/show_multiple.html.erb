<h2 class="heading">Edit <%= @author ? print_pseud_works_link(@author) : print_works_link(@user) %> </h2>
<!--FRONT END: TABLEWATCH!!-->
<div class="wrapper">
<%= form_tag edit_multiple_user_works_path(@user),  :id => 'edit-multiple-works' do %>
<% # FRONT END PLEASE CHECK THIS OVER there were lots of things to merge -- NN %>

  <table class="work index" summary="This page shows a list of your works. You can select a work, or many works, and then choose to edit, orphan, or delete them. You can post multiple drafts on this page too.">
    <caption><%= ts("Editing Multiple Works") %></caption>
    <thead>
      <tr>
        <th scope="row" colspan="2"><%= ts("Actions") %></th>
        <td><%= render :partial => 'edit_multiple_controls' %></td>
        <td><span class="submit actions"><%= submit_tag ts("Edit Checked") %></span></td>
      </tr>
      <tr>
        <th scope="col"><%= ts("Title") %></th>
        <th scope="col"><%= ts("Fandom") %></th>
        <th scope="col"><%= ts("Select") %></th>
        <th abbr="options" scope="col"><%= ts("Editing Options") %></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th scope="row" colspan="2"><%= ts("Actions") %></th>
        <td><%= render :partial => 'edit_multiple_controls' %></td>
        <td><span class="submit actions"><%= submit_tag ts("Edit Checked") %></span></td>
      </tr>
    </tfoot>
    <tbody>
      <% for work in @works %>
        <tr>
          <th scope="row"><%= label_tag "work_ids[]", link_to(work.title.html_safe, work_path(work)) %></th>
          <td><%= work.fandom_tags.collect{|tag| link_to_tag(tag) }.join(', ').html_safe %></td>
          <td><%= check_box_tag "work_ids[]", work.id %></td>
          <td class="navigation actions" role="menu">
            <ul>
              <li><%= link_to ts('Edit'), edit_work_path(work) %></li>
              <li><%= link_to ts('Orphan'), {:controller => 'orphans', :action => 'new', :work_id => work.id} %></li>
              <li><%= link_to ts('Delete'), work, 
                    :confirm => ts('Are you sure? This will delete the work and all its comments, kudos, and bookmarks. It cannot be undone.'), :method => :delete %></li>
              <% if !work.posted %>
                <li><%= link_to ts('Post'), post_draft_work_path(work), :method => :put %></li>
              <% end %>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>  
 	
<% end %>
</div>
