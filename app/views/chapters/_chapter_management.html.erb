<h3 class="landmark heading"><%= ts("Chapter Management") %></h3>
<ul class="chapter actions" role="menu">
  <% unless chapter.posted? %>
    <li>
      <%= form_tag post_work_chapter_path(work, chapter) do %>
      <%= submit_tag ts('Post Chapter') %>
      <% end %>
    </li>
  <% end %>
  
  <li><%= link_to ts('Edit Chapter'), [:edit, work, chapter] %></li>  
  <% if work.chapters.count > 1 %>
    <li><%= link_to ts('Delete Chapter'), [:confirm_delete, work, chapter], :confirm => ts('Are you sure you want to delete this chapter? This will delete all comments on the chapter as well and cannot be undone!') %></li>
  <% end %>
</ul>