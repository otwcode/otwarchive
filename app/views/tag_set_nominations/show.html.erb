
  <h3 class="landmark">Navigation</h3>
  <ul class="navigation actions" role="navigation">
    <li><%= link_to ts("Back To %{title}", :title => @tag_set.title), tag_set_path(@tag_set) %>
    <% if @tag_set.nominated && !@tag_set_nomination.reviewed? %>
  	  <li><%= link_to ts("Edit"), edit_tag_set_nomination_path(@tag_set, @tag_set_nomination) %></li>
  	<% end %>
    <% if @tag_set.nominated && @tag_set_nomination.unreviewed? %>
      <li>
        <%= link_to ts("Delete"), tag_set_nomination_path(@tag_set),
          :confirm => ts('Are you certain you want to delete these nominations?'),
          :method => :delete %>
      </li>
    <% end %>
  </ul>



  <h3><%= ts("Your Nominations For %{title}", :title => @tag_set.title) %></h3>
  <div class="wrapper">
    <dl class="meta">
      <dt><%= ts("Created at: ") %></dt>
      <dd><%= l(@tag_set_nomination.created_at.to_date) %></dd>
      <dt><%= ts("Status: ") %></dt>
      <dd>
        <% if @tag_set_nomination.unreviewed? %> 
          <%= ts("Not Yet Reviewed (may be edited or deleted)") %>
        <% elsif @tag_set_nomination.reviewed? %>
          <%= ts("Reviewed (may not be edited or deleted)") %>
        <% else %>
          <%= ts("Partially Reviewed (unreviewed nominations may be edited)") %>
        <% end %>
      </dd>
    </dl>
  </div>


<h3><%= ts("Nominated Tags") %> <%= link_to_help "tagset-nominated-tags" %></h3>

<ol class="nominations media index">			
  <% if @limit[:fandom] > 0 && (@limit[:character] > 0 || @limit[:relationship] > 0) %>

    <% # group by fandom %>
    <% @tag_set_nomination.fandom_nominations.each do |fandom_nom| %>
      <li class="category module <%= cycle :odd, :even %>">
        <h3><%= render "show_tag_status", :tag => fandom_nom %></h3>
        <% TagSet::TAG_TYPES_RESTRICTED_TO_FANDOM.each do |tag_type| %>
          <% if @limit[tag_type] > 0 %>
            <h4><%= tag_type.classify.pluralize %></h4>
            <% if fandom_nom.send("#{tag_type}_nominations").count == 0 %>
              <p><%= ts("None nominated in this fandom.") %></p>
            <% else %>
              <!--BACK END: is this list ordered? Or are these lis peers? If flat hierarchy pls use ul-->
              <ol>
                <% fandom_nom.send("#{tag_type}_nominations").each do |tag| %>
                <li><!--BACK END, pls class this containing li with unreviewed or unwrangled or w/e like  blurb_tag_block (because the li contains two elements: the help button and the span, we class the parent container so we can target the group)-->
                <%= render "show_tag_status", :tag => tag %></li>
                <% end %>
              </ol>
            <% end %>
          <% end %>
        <% end %>
      </li>
    <% end %>
    <%= render "show_by_tag_type", :tag_type => "freeform" %>

  <% else %>
  
    <% # list individually %>
    <% TagSet::TAG_TYPES_INITIALIZABLE.each do |tag_type| %>
      <%= render "show_by_tag_type", :tag_type => tag_type %>
    <% end %>
  <% end %>  
</ol>

