<!--Descriptive page name, messages and instructions-->
<h3 class="heading"><%= ts("Forgotten your password?") %></h3>
<p><%= ts("If you've forgotten your password, we can send you a temporary one.") %> 
<%= ts("Please tell us the user name or email address you used when you signed up for your Archive account.") %></p>
<!--/descriptions-->

<!--main content-->
<%= form_tag passwords_path do %>
  <p>
  <%= label_tag 'login', ts("Email address <strong>or</strong> user name:".html_safe) %>
  <%= text_field_tag 'login', '' %> 
  <%= submit_tag ts('Reset password', :class => 'submit') %>
  </p>
<% end %>
<!--/content-->
