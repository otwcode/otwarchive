<% end %>

<%= iboxify_page %>

<% if current_user.is_a?(User) && (skin = current_user.try(:preference).try(:skin)) %>
  <% cache("#{skin.id}-site-skin") do %>
    <%= render "skins/skin_style_block", :skin => skin %>
  <% end %><!-- end site skin cache -->
<% end %>

