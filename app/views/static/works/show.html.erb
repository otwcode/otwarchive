<div id="work">
  <%= render 'downloads/download_preface', :formats => [:html] %>

  <div id="chapters" class="userstuff">
    <% if @chapters.size > 1 %>
      <% for chapter in @chapters %>
        <%= render 'downloads/download_chapter', :formats => [:html], :chapter => chapter %>
      <% end %>
    <% else %>
      <%=raw sanitize_field(@chapters.first, :content) %>
    <% end %>
  </div>

  <%= render 'downloads/download_afterword', :formats => [:html] %>

  <div class="kudos">
    <%= form_for Kudo.new do |kudo_form| %>
      <%= kudo_form.hidden_field :commentable_id, :value => @work.id %>
      <%= kudo_form.hidden_field :commentable_type, :value => 'Work' %>
      <% # need to know whether to redirect to work or chapter in the kudos controller %>
      <%= hidden_field_tag :commentable_controller, controller.controller_name %>
      <%= hidden_field_tag :commentable_id, params[:id] %>
      <%= kudo_form.submit ts("Kudos â™¥"), :id => 'kudo_submit' %>
    <% end %>
  </div>
</div>
