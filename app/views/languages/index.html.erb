<!--Descriptive page name, messages and instructions-->
<h2 class="heading"><%= t('.supported_languages', :default => 'The archive supports these languages') %></h2>
<!--/descriptions-->

<!--subnav, actions-->
<p class="navigation actions" role="navigation">
<% if current_user.is_a?(User) && current_user.is_translation_admin? %>
  <%= link_to t('.link_to_new', :default => 'Add a new one'), new_language_path %>
<% else %>
  <%= link_to t('.suggest_language', :default => 'Suggest a new one!'), new_feedback_report_path %>
<% end %>
</p>
<!--/subnav-->

<!--main content-->
<dl class="language index">
  <% for language in @languages %>

    <% if language == Language.default %>
  		<dt><%= language.name %></dt>
    <dd><%= link_to language.works.count, works_path %> works</dd>
    <% else %>
    <dt><%= link_to language.name, language %></dt>
    <dd><%= link_to language.works.count, language_works_path(language) %> works</dd>
    <% end %>

  <% end %>
</dl>
<!--main content-->

