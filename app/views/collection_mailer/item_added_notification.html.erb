<% content_for :message do %> 

  <% @work = @creation.respond_to?(:work) ? @creation.work : @creation %>
  <% pseuds = @creation.pseuds.map{|p| style_pseud_link(p)}.to_sentence.html_safe %>
  
  <% if @creation.is_a?(Work) %>
    <%= @work.pseuds.length > 0 ? pseuds : style_bold(@work.authors_to_sort_on) %> posted a 
    <%= @work.backdate ? "backdated" : "new" %> work to your collection, 
    <b><%= style_link(@collection.name, url_for(@collection)) %></b>:
    
    <br>
    
    <i><b><%= style_link(@work.title.html_safe, work_url(@work)) %></b></i>
  
  <% end %>

<% end %>

<% content_for :footer_note do %>
  You're receiving this email because you've chosen to be notified of new works added to your collection <%= style_footer_link(@collection.name, url_for(@collection)) %>. Follow the link to change settings if you no longer wish to receive updates.
<% end %>