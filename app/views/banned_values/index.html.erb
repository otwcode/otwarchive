<table>
  <tr>
    <th>Name or Value</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @banned_values.each do |banned_value| %>
      <tr>
        <td><%= banned_value.name %></td>
        <td><%= banned_value.ban_type %></td>
        <td><%= link_to 'Show', banned_value %></td>
        <td><%= link_to 'Edit', edit_banned_value_path(banned_value) %></td>
        <td><%= link_to 'Destroy', banned_value, method: :delete, data: { confirm: 'Are you sure?' } %></td>
