<h3 class="heading"><%= ts("User History") %></h3>
<div class="wrapper">
  <table id="user_history" summary="<%= ts("Shows what notable actions, such as creating an account, a user performed, and when they did them.") %>">
    <caption><%= ts("History of User Actions") %></caption>
    <thead>
    <tr>
      <th scope="col"><%= ts("Date / Time") %></th>
      <th scope="col"><%= ts("Action") %></th>
      <th scope="col"><%= ts("Details") %></th>
    </tr>
    </thead>
    <tbody>
    <% unless @log_items.blank?
         @log_items.each do |item| %>
        <tr>
          <td><%= item.created_at %>
            (<abbr class="timeago" title="<%= item.created_at %>"><%= item.created_at.iso8601 %></abbr>)
          </td>
          <td><%= log_item_action_name(item.action) %><%= item.role.name if item.role %><%= item.enddate if item.enddate %></td>
          <td><%= item.note %></td>
        </tr>
      <% end %>
    <% end %>
    <tr>
      <td><%= @user.created_at %></td>
      <td><%= ts("Account Created") %></td>
      <td><%= ts("System Generated") %></td>
    </tr>
    <tr>
      <td><%= @user.created_at %>
        (<abbr class="timeago" title="<%= @user.created_at %>"><%= @user.created_at.iso8601 %></abbr>)
      </td>
      <td><%= ts('Account Created') %></td>
      <td><%= ts('System Generated') %></td>
    </tr>
    <tr>
      <td>
        <% if @user.current_sign_in_at.nil? %>
          <%= ts('No logins recorded') %>
        <% else %>
          <%= @user.last_sign_in_at %> ( <%= @user.current_sign_in_ip %>
          )(<abbr class="timeago" title="<%= @user.current_sign_in_at %>"><%= @user.current_sign_in_at.iso8601 %></abbr>)
        <% end %>
      </td>
      <td><%= ts('Last Login') %></td>
      <td><%= ts('System Generated') %></td>
    </tr>
    <tr>
      <td>
        <% if @user.last_sign_in_at.nil? %>
          <%= ts('No previous login recorded') %>
        <% else %>
          <%= @user.last_sign_in_at %> ( <%= @user.last_sign_in_ip %>
          )(<abbr class="timeago" title="<%= @user.last_sign_in_at %>"><%= @user.last_sign_in_at.iso8601 %></abbr>)
        <% end %>
      </td>
      <td><%= ts('Last Activity') %></td>
      <td><%= ts('System Generated') %></td>
    </tr>
    </tbody>
  </table>
</div>

<% content_for :footer_js do %>
  <%= javascript_include_tag 'jquery.timeago.min', skip_pipeline: true %>
  // convert an absolute time to a relative time, e.g. 1 day ago
  $j('.timeago').timeago();
<% end %>