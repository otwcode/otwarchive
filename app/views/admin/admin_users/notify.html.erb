<!--Descriptive page name, messages and instructions-->
<h2><%= ts("Send Notification To Users") %></h2>
<!--/descriptions-->

<!--main content-->
<%= form_tag send_notification_admin_users_path, :method => :post do %>
<fieldset>
  <legend>Write Notification</legend>
    <h3><%= label_tag "subject", ts("Subject") %></h3>
    <div><%= text_field_tag "subject" %></div>
  <h3><%= label_tag "content", ts("Message") %></h3>
    <div><%= text_area_tag "content" %></div>
</fieldset>
<fieldset>
  <legend>Notify Groups</legend>
  <dl>
    <dt><%= label_tag "notify_all", ts('Notify All Users') %></dt>
    <dd><%= check_box_tag "notify_all[]", 0, nil, {:id => "notify_all"} %></dd>
    
    <% @roles.each do |role| %>
      <dt><%= label_tag "notify_all_#{role.name}", ts("Notify All %{role_name}", :role_name => role.name.humanize.titlecase.pluralize) %></dt>
      <dd><%= check_box_tag "notify_all[]", role.name, nil, {:id => "notify_all_#{role.name}"} %></dd>
    <% end %>
  </dl>
</fieldset>
<fieldset>
  <legend>Send, Or Continue</legend>
    <p class="submit"><%= submit_tag ts("Send Notification") %></p>
</fieldset>
<fieldset>
  <legend>Notify Individuals</legend>
    <h3><%= ts('Or Select Users To Notify') %></h3>
  <%= alpha_paginated_section %>
  <div class="wrapper">
      <table id="admin_users_table">
      <caption><%= ts('Select Users To Notify') %></caption>
      <thead>
    <tr>
      <th scope="row"><%= ts("All/None") %></th>
      <td>
            <input type="checkbox" id="select_all"></td>
  </tr>
  <tr>
        <th scope="col"><%= ts("Username") %></th>
        <th scope="col"><%= ts("Select") %></th>
      </tr>
  </thead>
  <tbody>
  <% @all_users.each do |user| %>
        <tr id="user_<%= user.id %>">
          <td><%= label_tag "user_ids_#{user.id}", user.login %></td>
          <td><%= check_box_tag "user_ids[]", user.id, false, :id => "user_ids_#{user.id}", :class => "user_id" %></td>
        </tr> 
      <% end %>
</tbody>
      </table>
  </div>  
      <%= alpha_paginated_section %>
</fieldset>
<fieldset>
  <legend>Send Notification</legend>
  <p class="submit"><%= submit_tag ts("Send Notification") %></p>
</fieldset>
<% end %>
<!--/content-->
<%= content_for :footer_js do %>
  <%= javascript_tag do %>
    $j(document).ready(function(){
      $j("#select_all").change(function() {
        $j(":checkbox[name='user_ids[]']").each(function(index, ticky) {
            $j(ticky).attr("checked", !$j(ticky).attr("checked"));
          });
      });
    })
  <% end %>
<% end %>
