<%= render 'download_preface', formats: :html %>

<div id="chapters" class="userstuff">
  <% if @chapters.size > 1 %>
    <% for chapter in @chapters %>
      <%= render 'download_chapter', formats: :html, chapter: chapter %>
    <% end %>
  <% else %>
    <div class="userstuff">
      <%=raw sanitize_field(@chapters.first, :content) %>
    </div>
  <% end %>
</div>

<%= render 'download_afterword', formats: :html %>
