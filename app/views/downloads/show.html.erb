<%= render 'download_preface.html' %>

<div id="chapters" class="userstuff">
  <% if @chapters.size > 1 %>
    <% for chapter in @chapters %>
      <%= render 'download_chapter.html', :chapter => chapter %>
    <% end %>
  <% else %>
    <div class="userstuff">
      <%=raw sanitize_field(@chapters.first, :content) %>
    </div>
  <% end %>
</div>

<%= render 'download_afterword.html' %>
