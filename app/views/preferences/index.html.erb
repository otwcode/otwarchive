<!--Descriptive page name, messages and instructions-->
<h2><%= ts('Update My Preferences') %></h2>
<%= error_messages_for :preference %>

<!--/descriptions-->

<!--subnav-->
<h3 class="landmark">Navigation</h3>
<ul class="navigation" role="navigation">
	<li><%= link_to ts("Edit My Profile"), edit_user_path(@user) %></li>
	<li><%= link_to ts('Manage My Pseuds'), user_pseuds_path(@user) %></li>
	<li><%= link_to ts("Change My User Name"), change_username_user_path(@user) %></li>
	<li><%= link_to ts('Orphan My Works'), new_orphan_path %></li>
</ul>
<!--/subnav-->

<!--main content-->
<%= form_for(@preference, :url => { :action => "update", :user_id => @user }) do |f| %>
  <h4><%= ts("Privacy") %></h4>
  <ul>
  	<li>
   	  <%= f.check_box :email_visible %>
   	  <%= f.label :email_visible, ts("Display Email Address") %>
   	</li>

  	<li>
    	  <%= f.check_box :date_of_birth_visible %>
    	  <%= f.label :date_of_birth_visible, ts("Display Date of Birth") %>
  	</li>

  	<li>
   	  <%= f.check_box :minimize_search_engines %>
   	  <%= f.label :minimize_search_engines, ts("Minimize Search Engine Visibility") %>
   	</li>
   	
  	<li>
   	  <%= f.check_box :disable_share_links %>
   	  <%= f.label :disable_share_links, ts("Disable Share Buttons") %> <%= link_to_help 'disable-share-buttons' %>
   	</li>
   	
   	
  </ul>
  
  <h4><%= ts("Site Display") %></h4>
  <ul>
  	<li>
    	  <%= f.check_box :adult %>
    	  <%= f.label :adult, ts("Show me adult content without prompting") %>
  	</li>

  	<li>
    	  <%= f.check_box :view_full_works %>
    	  <%= f.label :view_full_works, ts("Always view entire work by default") %>
  	</li>

  	<li>
    	  <%= f.check_box :hide_warnings %>
    	  <%= f.label :hide_warnings, ts("Hide warnings by default (you will still have the option of revealing them)")  %>
  	</li>

  	<li>
  	  <%= f.check_box :hide_freeform %>
  	  <%= f.label :hide_freeform, ts("Hide additional tags by default (you will still have the option of revealing them)")  %>
	  </li>

    <li>
    	<%= f.check_box :disable_work_skins %>
    	<%= f.label :disable_work_skins, ts("Hide custom styles on works")  %>
    </li>

    <li>
      <%= f.label :skin_id, ts("Site skin")%>: 
      <%= f.select :skin_id, @available_skins.collect{|s| [s.title, s.id]} %>
      (<%= link_to ts('Public skins'), skins_path %>)
    </li>
  </ul>
  
  <h4><%= ts("Statistics") %></h4>
  <ul>
    <li>
      <%= f.check_box :hide_all_hit_counts %>
      <%= f.label :hide_all_hit_counts, ts("Don't show me any hit counts.") %>
    </li>

    <li>
      <%= f.check_box :hide_private_hit_count %>
      <%= f.label :hide_private_hit_count, ts("Don't show me hits on my works.") %>
    </li>

    <li>
      <%= f.check_box :hide_public_hit_count %>
      <%= f.label :hide_public_hit_count, ts("Don't publicly display hits on my works.") %>
    </li>
  </ul>
  
  <h4><%= ts("Comments") %></h4>
  <ul>
  	<li>
    	  <%= f.check_box :comment_emails_off %>
    	  <%= f.label :comment_emails_off, ts("Turn off notification emails for comments")  %>
  	</li>

  	<li>
    	  <%= f.check_box :comment_inbox_off %>
    	  <%= f.label :comment_inbox_off, ts("Turn off notification messages to your Inbox for comments")  %>
  	</li>

  	<li>
    	  <%= f.check_box :comment_copy_to_self_off %>
    	  <%= f.label :comment_copy_to_self_off, ts("Turn off copies of your own comments")  %>
  	</li>

  	<li>
    	  <%= f.check_box :kudos_emails_off %>
    	  <%= f.label :kudos_emails_off, ts("Turn off notification emails for kudos")  %>
  	</li>

  	<li>
    	  <%= f.check_box :admin_emails_off %>
    	  <%= f.label :admin_emails_off, ts("Turn off admin notification emails")  %>
  	</li>
  </ul>
  
  <h4><%= ts("Collections, Challenges and Gifts") %></h4>
  <ul>
  	<li>
  	  <%= f.check_box :automatically_approve_collections %>
  	  <%= f.label :pref, ts("Automatically approve when a moderator adds your work to a collection in the archive.") %>
  	</li>

  	<li>
    	  <%= f.check_box :collection_emails_off %>
    	  <%= f.label :collection_emails_off, ts("Turn off notification emails from collections.") %>
  	</li>

  	<li>
    	  <%= f.check_box :collection_inbox_off %>
    	  <%= f.label :collection_inbox_off, ts("Turn off Inbox messages from collections.") %>
  	</li>

  	<li>
    	  <%= f.check_box :recipient_emails_off %>
    	  <%= f.label :recipient_emails_off, ts("Turn off gift work notification emails.") %>
  	</li>
  </ul>
  
  <h4><%= ts("Misc") %></h4>
  <ul>
    <li>
      <%= f.label :time_zone, ts("Your time zone: ")%>
      <%= f.time_zone_select :time_zone, nil, :default => Time.zone.name %>
    </li>

  	<li>
  	  <%= f.check_box :history_enabled %>
  	  <%= f.label :history_enabled, ts("Enable Viewing History") %>
  	</li>

    <li>
    	<%= f.check_box :first_login %>
    	<%= f.label :first_login, ts("Turn on the first login help banner")  %>
    </li>
    
    <li>
    	<%= f.check_box :banner_seen %>
    	<%= f.label :banner_seen, ts("Turn off the general banner notice")  %>
    </li>

    <li>
      <%= f.label :work_title_format, ts("Format the titles on your works and series")  %>:
			<%= f.text_field :work_title_format %>
			<%= link_to_help "work_title_format" %>
    </li>
  </ul>


	<p class="submit">
  	<%= f.submit t('.forms.update', :default => "Update") %>
	</p>
<% end %>
<hr class="clear" />
<!--/content-->


