  <p id="greeting">
      <%= ts("Hi,") %> <%= link_to current_user.login, user_path(current_user), :class => "login" %>!
    </p>
  <ul id="login">
    <li>
      <%= link_to ts("Post New"), new_work_path %>&nbsp;|
    </li>
  <li>
  <%= link_to ts("Import"), new_work_path(:import => true) %>  &nbsp;|
  </li>
    <li>
