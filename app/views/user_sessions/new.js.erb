if ($j("#small_login form").length === 0) {
  $j("#small_login").html(
    "<%= escape_javascript(render :partial => "user_sessions/passwd_small") %>"
  );
  $j("#login-dropdown").text("Close");
  $j("#small_login").show();
} else {
  $j("#small_login").html("");
  $j("#login-dropdown").text("Log In");
  $j("#small_login").hide();
}