<% @user_session = UserSession.new unless @user_session %>
<%= form_for @user_session do |f| %>
	<dl>
    <dt><%= f.label :login, ts("User name:") %></dt>
    <dd><%= f.text_field :login, :class => 'text', :size => nil %></dd>
    <dt><%= f.label :password, ts("Password:") %></dt>
    <dd><%= f.password_field :password, :class => 'text', :size => nil %></dd>
  </dl>
  <p class="submit actions">
    <label for="user_session_remember_me" class="action"><%= check_box_tag "user_session[remember_me]", 1, false, :id => 'user_session_remember_me' %><%= ts('Remember Me') %></label>
    <%= f.submit ts("Log In") %>
  </p>    
  <p class="footnote action">
  	<%= link_to ts("Forgot password?"), new_password_path %>
  </p>
<% end %>
