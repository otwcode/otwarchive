<% @user_session = UserSession.new unless @user_session %>
<%= form_for @user_session do |f| %>
  <p>
    <%= f.label :login, ts("User name:") %>
    <%= f.text_field :login, :class => 'text', :size => nil %>
    <%= f.label :password, ts("Password:") %>
    <%= f.password_field :password, :class => 'text', :size => nil %>
  </p>
  <p class="footnote">
    <%= f.check_box :remember_me %>
    <%= f.label 'remember_me', ts("Remember me") %>&nbsp;|
    <%= link_to_remote 'openid login', {:url => {:controller => :user_sessions, :action => 'openid_small'}},
        :href => url_for(params.merge :use_openid => true), :class => 'footnote' %>&nbsp;|
    <%= link_to ts("forgot password?"), new_password_path %>
  </p>
  <p>
    <%= f.submit ts("Log in"), :class => 'button' %>
  </p>
<% end %>
