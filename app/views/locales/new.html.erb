<!--Descriptive page name, messages and instructions-->
<h2 class="heading"><%= ts('Add a new locale:') %></h2>
<%= error_messages_for :locale %>
<!--/descriptions-->

<!--subnav-->
<!--/subnav-->

<!--main content-->
<%= form_for(@locale) do |f| %>
  <dl>
    <dt><%= f.label :language_id, ts("Language:") %></dt>
    <dd><%= f.select(:language_id, @languages.collect {|l| [ l.name, l.id ] }) %></dd>
  
    <dt><%= f.label :name, ts("Name:") %></dt>
    <dd><%= f.text_field :name %></dd>
    
    <dt><%= f.label :iso, ts("Iso:") %></dt>
    <dd><%= f.text_field :iso %></dd>
  </dl>
  <p class="submit actions"><%= f.submit ts("Submit") %></p>
<% end %>
<!--/content-->

