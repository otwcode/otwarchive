<% creation_type = @creation.model_name.human.downcase %>
<% content_for :message do %>
<% if creation_type == "work" %>
  <%= t(".intro_work", inviting_user: @inviting_user.login, pseud: @creatorship.pseud.name) %>
<% elsif creation_type == "chapter" %>
  <%= t(".intro_chapter", inviting_user: @inviting_user.login, pseud: @creatorship.pseud.name) %>
<% elsif creation_type == "series" %>
  <%= t(".intro_series", inviting_user: @inviting_user.login, pseud: @creatorship.pseud.name) %>
<% else %>
  <%= t(".intro", type: creation_type, inviting_user: @inviting_user.login,
      pseud: @creatorship.pseud.name) %>
<% end %>

<%= t(".text.creation",
      title: creation_title(@creation),
      url: polymorphic_url(@creation),
      pseuds: @creation.pseuds.map(&:byline).to_sentence) %>

<%= t(".text.instructions", type: creation_type, url: user_creatorships_url(@user)) %>

<% end %>
