<% content_for :message do %>
  <%= (@work.pseuds.count > 1 && @user != User.current_user) ? 
      t('user_mailer.delete_work_notification.html.entire_other',
        user:  @user.default_pseud.byline,
        title: style_bold(@work.title.html_safe),
        pseud: style_pseud_link(User.current_user.default_pseud),
        support: support_link(t 'user_mailer.delete_work_notification.support') ).html_safe :
      t('user_mailer.delete_work_notification.html.entire_yourself',
        user:  @user.default_pseud.byline,
        title: style_bold(@work.title.html_safe),
        support: support_link(t 'user_mailer.delete_work_notification.support') ).html_safe
  %>
<% end %>
