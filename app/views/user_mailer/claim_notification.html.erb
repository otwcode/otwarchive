<% content_for :message do %>
  <h2 class="heading">
    <%= t '.html.hello' %>
  </h2>

  <p><%= t( '.html.part1', open_doors: style_link(t('.open_doors'),'http://opendoors.transformativeworks.org'), ao3: style_link(t('.html.ao3'), root_url )).html_safe %></p>

  <p><%= t( '.html.part2', ao3_news: style_link(t('.html.ao3_news'), 'http://archiveofourown.org/admin_posts?tag=18'), open_doors_faq: style_link(t('.html.open_doors_faq'), 'http://opendoors.transformativeworks.org/faq'), tutorial_page: style_link(t('.html.tutorials_page'), 'http://opendoors.transformativeworks.org/tutorials'), support: support_link(t '.html.support')).html_safe %></p>

  <p><%= t('.html.part3', open_doors: style_link(t('.html.contact_open_doors'), 'http://transformativeworks.org/contact/open%20doors')).html_safe %></p>

  <p><%= t('.html.part4', support: support_link(t '.html.support')).html_safe %></p>

  <p><%= t('.html.part5', email: @external_email).html_safe %></p>

  <ul>
    <% @claimed_works.each do |work| %>
      <li><%= style_link(work.title.html_safe, work_url(work)) %>
        <%= (work.fandom_string.blank? ? "" : " (#{work.fandom_string})") %></li>
    <% end %>
  </ul>

  <p><%= t '.html.part6' %></p>

  <p><%= t('.html.part7', open_doors: style_link(t('.html.contact_open_doors'), 'http://transformativeworks.org/contact/open%20doors')).html_safe %></p>

  <p><%= t('.html.part8', open_doors: style_link(t('.html.contact_open_doors'), 'http://transformativeworks.org/contact/open%20doors')).html_safe %></p>

  <p><%= t('.html.part9', support: support_link(t '.html.support')).html_safe %></p>

  <%= t '.html.part10' %> 
<% end %>
