<% content_for :message do %>
  <h2 class="heading">
    <%= t 'user_mailer.claim_notification.html.hello' %>
  </h2>

  <p><%= t( 'user_mailer.claim_notification.html.part1', open_doors: style_link(t 'user_mailer.claim_notification.html.open_doors', 'http://opendoors.transformativeworks.org'), ao3: style_link(t 'user_mailer.claim_notification.html.ao3', root_url )).html_safe %></p>

  <p><%= t( 'user_mailer.claim_notification.html.part2', ao3_news: style_link(t 'user_mailer.claim_notification.html.ao3_news', 'http://archiveofourown.org/admin_posts?tag=18'), open_doors_faq: style_link(t 'user_mailer.claim_notification.html.open_doors_faq', 'http://opendoors.transformativeworks.org/faq'), tutorial_page: style_link(t 'user_mailer.claim_notification.html.tutorials_page', 'http://opendoors.transformativeworks.org/tutorials'), support: support_link(t 'user_mailer.claim_notification.html.support')).html_safe %></p>

  <p><%= t('user_mailer.claim_notification.html.part3', open_doors: style_link(t 'user_mailer.claim_notification.html.contact_open_doors', 'http://transformativeworks.org/contact/open%20doors')).html_safe %></p>

  <p><%= t('user_mailer.claim_notification.html.part4', support: support_link(t 'user_mailer.claim_notification.html.support')).html_safe %></p>

  <p><%= t('user_mailer.claim_notification.html.part5', email: @external_email).html_safe %></p>

  <ul>
    <% @claimed_works.each do |work| %>
      <li><%= style_link(work.title.html_safe, work_url(work)) %>
        <%= (work.fandom_string.blank? ? "" : " (#{work.fandom_string})") %></li>
    <% end %>
  </ul>

  <p><%= t 'user_mailer.claim_notification.html.part6' %></p>

  <p><%= t('user_mailer.claim_notification.html.part7', open_doors: style_link(t 'user_mailer.claim_notification.html.contact_open_doors', 'http://transformativeworks.org/contact/open%20doors')).html_safe %></p>

  <p><%= t('user_mailer.claim_notification.html.part8', open_doors: style_link(t 'user_mailer.claim_notification.html.contact_open_doors', 'http://transformativeworks.org/contact/open%20doors')).html_safe %></p>

  <p><%= t('user_mailer.claim_notification.html.part9', support: support_link(t 'user_mailer.claim_notification.html.support')).html_safe %></p>

  <%= t 'user_mailer.claim_notification.html.part10 %> 
<% end %>
