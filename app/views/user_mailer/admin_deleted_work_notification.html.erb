<% content_for :message do %>
  <p><%= t("mailer.general.greeting.formal", user: style_bold(@user.login)).html_safe %></p>

  <p><%= t('.html.part1', title: "<i>#{style_bold(@work.title.html_safe)}</i>".html_safe).html_safe %></p>

  <p><%= t('.html.part2', opendoors_link: opendoors_link(t '.opendoors')).html_safe %></p>

  <p><%= t('.html.tos_violation', abuse_link: abuse_link(t '.abuse_team')).html_safe %></p>

  <p><%= t '.bye' %></p>
<% end %>
