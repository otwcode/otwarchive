<% content_for :message do %>
  <h2 class="heading">
    <%= t 'user_mailer.invitation_to_claim.greeting', app_name: ArchiveConfig.APP_NAME %>
  </h2>

  <p><%= t 'user_mailer.invitation_to_claim.html.part1', open_doors_link: style_link(t('user_mailer.invitation_to_claim.html.open_doors'), "http://opendoors.transformativeworks.org"), app_short_name: ArchiveConfig.APP_SHORT_NAME, app_link: style_link(ArchiveConfig.APP_NAME, root_url) %></p>

  <p><%= t 'user_mailer.invitation_to_claim.html.part2', news_link: style_link(t('user_mailer.invitation_to_claim.html.ao3_news'), root_url + "admin_posts?tag=18"), open_doors_faq_link: style_link(t('user_mailer.invitation_to_claim.html.faq_page'), "http://opendoors.transformativeworks.org/faq"), open_doors_tutorial_link: style_link(t('user_mailer.invitation_to_claim.html.tutorial_page'), "http://opendoors.transformativeworks.org/tutorials"), support_link: support_link(t 'user_mailer.invitation_to_claim.html.contact_support') %></p>

  <p><%= t 'user_mailer.invitation_to_claim.html.part3', open_doors_link: style_link(t('user_mailer.invitation_to_claim.contact_open_doors'), 'http://transformativeworks.org/contact/open%20doors') %></p>

  <p><%= t 'user_mailer.invitation_to_claim.html.part4', support_link: support_link(t 'user_mailer.invitation_to_claim.html.contact_support') %></p>

  <p><%= style_link(t('user_mailer.invitation_to_claim.part5'), claim_url(:invitation_token => @token)) %></p>

  <p><%= t 'user_mailer.invitation_to_claim.part6' %></p>

  <ul>
  <% @external_author.works.each do |work| %>
    <li><%= style_link(work.title.html_safe, work_url(work)) %>
      <%= (work.fandom_string.blank? ? "" : " (#{work.fandom_string})") %></li>
  <% end %>
  </ul>

  <p><%= t 'user_mailer.invitation_to_claim.html.part7', support_link: support_link(t 'user_mailer.invitation_to_claim.html.contact_support') %></p>

  <p><%= t 'user_mailer.invitation_to_claim.part8' %></p>

  <p><%= t 'user_mailer.invitation_to_claim.html.part9', open_doors_link: style_link(t('user_mailer.invitation_to_claim.contact_open_doors'), 'http://transformativeworks.org/contact/open%20doors') %></p>

  <p><%= t 'user_mailer.invitation_to_claim.html.part10', open_doors_link: style_link(t('user_mailer.invitation_to_claim.contact_open_doors'), 'http://transformativeworks.org/contact/open%20doors') %></p>

  <p><%= t 'user_mailer.invitation_to_claim.html.part11', support_link: support_link(t 'user_mailer.invitation_to_claim.html.contact_support') %></p>

  <p><%= t 'user_mailer.invitation_to_claim.part12' %></p>

  <p><%= t 'user_mailer.invitation_to_claim.html.part13' %><br/>
    <%= t 'user_mailer.invitation_to_claim.html.part14' %><br/>
    <%= t 'user_mailer.invitation_to_claim.html.part15' %></p>
<% end %>
