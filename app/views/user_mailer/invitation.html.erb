<% content_for :message do %>
  <p>
    <%= t("mailer.general.greeting.introductory") %>
  </p>

  <p>
    <% if !@user_name.blank? %>
      <%= t(".has_invited", user_name: style_bold(@user_name)).html_safe %>
    <% else %>
      <%= t ".been_invited" %>
    <% end %>
  </p>

  <p>
    <%= t(".html.ao3_intro", otw_link: style_link("Organization for Transformative Works", "http://transformativeworks.org")).html_safe %>
  </p>

  <p>
    <%= t ".account_functionality" %>
  </p>

  <p>
    <%= t(".html.invite_link", invitation_link: style_link(signup_url(:invitation_token => @invitation.token), signup_url(:invitation_token => @invitation.token))).html_safe %>
  </p>

  <p>
    <%= t(".html.activation_support_link", support_link: style_link(t(".html.support_link_text"), new_feedback_report_url)).html_safe %>
  </p>

  <p>
    <%= t(".html.faq_link", faq_link: style_link(t(".html.faq_link_text"), archive_faqs_url)).html_safe %>
  </p>
<% end %>
