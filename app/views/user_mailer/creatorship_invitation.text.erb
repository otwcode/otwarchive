<% creation_type = @creation.model_name.human.downcase %>
<% content_for :message do %>
<%= t(".intro", type: creation_type, inviting_user: @inviting_user.login,
      pseud: @creatorship.pseud.name) %>

<%= t(".text.creation",
      title: creation_title(@creation),
      url: polymorphic_url(@creation),
      pseuds: @creation.pseuds.map(&:byline).to_sentence) %>

<%= t(".text.accept", type: creation_type, url: user_creatorships_url(@user)) %>

<%= t ".reject" %>
<% end %>
