<% creation_type = @creation.class.name.underscore.humanize.downcase %>

<%= t 'user_mailer.coauthor_notification.part1', type: creation_type %>

<%= @creation.title %>
(<%= @creation.class == Series ? series_url(@creation) : work_url(@creation) %>)

<%= t 'user_mailer.coauthor_notification.text.part2',  type: creation_type, url: @creation.class == Series ? edit_series_url(@creation) : edit_work_url(@creation) %>
<% end %>
