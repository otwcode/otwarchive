<% content_for :message do %>
<%= t(".text.work_listed", work_title: @related_work.parent.title.html_safe,
work_url: @related_parent_link,
related_work_title: @related_work.work.title.html_safe,
related_work_url: @related_child_link,
work_creators: if @related_work.work.anonymous?
                t(".anonymous")
              else
                @related_work.work.pseuds.map { |p| text_pseud(p) }
                                         .to_sentence
              end) %>

<%= t(".text.approve", related_work_url: related_work_url(@related_work)) %>

<%= t(".can_come_back") %>
<% end %>
