<% content_for :message do %>
<%= t 'user_mailer.delete_work_notification.hello', user: @user.default_pseud.byline %>
  
<%= t('user_mailer.delete_work_notification.text.part1', title: @work.title, deleted_by: (@work.pseuds.count > 1 && @user != User.current_user) ? (t('user_mailer.delete_work_notification.request_of') + User.current_user.default_pseud) : t('user_mailer.delete_work_notification.your_request') ) %>
  
<%= t('user_mailer.delete_work_notification.html.support', support: root_url + "support" ) %>
  
<%= t('user_mailer.delete_work_notification.bye') %>
<% end %>
