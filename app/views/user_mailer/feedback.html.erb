<% content_for :message do %>
  <p>
    <% if @username.present? %>
      <%= t("mailer.general.greeting.informal.addressed",
            name: style_bold(@username)).html_safe %>
    <% else %>
      <%= t("mailer.general.greeting.informal.unaddressed") %>
    <% end %>
  </p>

  <p><%= t(".introduction") %></p>

  <%= style_quote("<b>#{raw(strip_images(@summary))}</b> #{raw(strip_images(@comment))}") %>

  <p><%= t(".additional_ticket") %></p>

  <p>
    <%= t("mailer.general.closing.formal") %><br/>
    <%= style_bold(t("mailer.general.signature.support")) %>
  </p>
<% end %>

<% content_for :sent_at do %>
  <%= l(Time.now) %>
<% end %>
