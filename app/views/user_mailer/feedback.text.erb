<% content_for :message do %>

<% if @username.present? %>
<%= t("mailer.general.greeting.informal.addressed", name: @username) %>
<% else %>
<%= t("mailer.general.greeting.informal.unaddressed") %>
<% end %>

<%= t(".introduction") %>

<%= text_divider %>

* <%= to_plain_text(raw @summary) %> *
<%= to_plain_text(raw @comment) %>

<%= text_divider %>

<%= t(".additional_ticket") %>

<%= t("mailer.general.closing.formal") %>
<%= t("mailer.general.signature.support") %>
<% end %>

<% content_for :sent_at do %><%= l(Time.now) %><% end %>
