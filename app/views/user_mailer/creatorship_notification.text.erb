<% creation_type = @creation.model_name.human.downcase %>
<% content_for :message do %>
<%= t(".intro", type: creation_type, adding_user: @adding_user.login,
      pseud: @creatorship.pseud.name) %>

<%= t ".text.creation", title: creation_title(@creation),
  url: polymorphic_url(@creation),
  pseuds: @creation.pseuds.map(&:byline).to_sentence %>

<%= t(".#{@creation.model_name.to_s.underscore}.explanation",
      adding_user: @adding_user.login) %>

<%= t ".text.remove", type: creation_type, url: edit_polymorphic_url(@creation) %>
<% end %>
