<% creation_type = @creation.model_name.human.downcase %>
<% content_for :message do %>
<% if creation_type == "work" %>
  <%= t(".intro_work", adding_user: @adding_user.login, pseud: @creatorship.pseud.name) %>
<% elsif creation_type == "chapter" %>
  <%= t(".intro_chapter", adding_user: @adding_user.login, pseud: @creatorship.pseud.name) %>
<% elsif creation_type == "series" %>
  <%= t(".intro_series", adding_user: @adding_user.login, pseud: @creatorship.pseud.name) %>
<% else %>
  <%= t(".intro", type: creation_type, adding_user: @adding_user.login,
      pseud: @creatorship.pseud.name) %>
<% end %>

<%= t ".text.creation", title: creation_title(@creation),
  url: polymorphic_url(@creation),
  pseuds: @creation.pseuds.map(&:byline).to_sentence %>

<%= t ".explanation" %>

<% if creation_type == "work" %>
  <%= t(".text.remove_work", url: edit_polymorphic_url(@creation)) %>
<% elsif creation_type == "chapter" %>
  <%= t(".text.remove_chapter", url: edit_polymorphic_url(@creation)) %>
<% elsif creation_type == "series" %>
  <%= t(".text.remove_series", url: edit_polymorphic_url(@creation)) %>
<% else %>
  <%= t ".text.remove", type: creation_type, url: edit_polymorphic_url(@creation) %>
<% end %>
<% end %>
