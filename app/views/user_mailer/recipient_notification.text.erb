<% content_for :message do %>
<%= t("mailer.general.greeting.informal.addressed", name: @user.login) %>

<% if @collection %>
<%= t(".text.collection", collection_title: @collection.title, collection_url: collection_url(@collection)) %>
<% else %>
<%= t(".no_collection") %>
<% end %>

<%= t(".text.title_word_count", work_title: @work.title.html_safe, word_count: t(".word_count", count: @work.word_count)) %>
<%= @collection ? collection_work_url(@collection, @work) : work_url(@work) %>

<%= t(".text.attribution", creator_text: creator_text(@work)) %>

<%= render "work_info", work: @work %>

<% if @collection && !@collection.gift_notification.blank? %><%= @collection.gift_notification %><% end %><% end %>
