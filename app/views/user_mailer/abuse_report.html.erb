<% content_for :message do %>
  <% if @username %>
  <p><%= t('mailer.general.greeting.formal', 
                name: @username) %></p>
  <% end %>

  <p><%= t('user_mailer.abuse_report.para1') %></p>

  <p><%= t('user_mailer.abuse_report.para2') %></p>

  <p><%= t('user_mailer.abuse_report.copy.intro') %></p>
  
  <p>
    <%= style_bold(t('user_mailer.abuse_report.copy.url')) %>
    <%= t(@url) %>
  </p>

  <p>
    <%= style_bold(t('user_mailer.abuse_report.copy.summary')) %>
    <%= t(@summary) %>
  </p>

  <p><%= style_bold(t('user_mailer.abuse_report.copy.comment')) %></p>
  <p><%= style_quote(t(@comment)) %></p>

  <p><%= t('user_mailer.abuse_report.thankyou') %></p>

  <p><%= t('mailer.general.closing.formal') %></p>

  <p><%= style_bold(t('mailer.general.signature.abuse_team')) %></p>
<% end %>

<% content_for :sent_at do %>
  <%= l(Time.now) %>
<% end %>