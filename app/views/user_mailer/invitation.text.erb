<% content_for :message do %>
<%= t("mailer.general.greeting.introductory") %>

<% if !@user_name.blank? %>
<%= t ".has_invited", user_name: @user_name %>
<% else %>
<%= t ".been_invited" %>
<% end %>

<%= t ".text.ao3_intro" %>

<%= t ".account_functionality" %>

<%= t ".text.invite_link", invitation_link: signup_url(:invitation_token => @invitation.token) %>

<%= t ".text.activation_support_link", support_link: new_feedback_report_url %>

<%= t ".text.faq_link", faq_link: archive_faqs_url %>
<% end %>
