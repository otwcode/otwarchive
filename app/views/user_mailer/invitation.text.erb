<% content_for :message do %>
<%= t("mailer.general.greeting.introductory") %>

<% if !@user_name.blank? %>
<%= t ".has_invited", user_name: @user_name %>
<% else %>
<%= t ".been_invited" %>
<% end %>

<%= t ".part1" %>

<%= t ".part2" %>

<%= t ".text.part3", invitation_link: signup_url(:invitation_token => @invitation.token) %>

<%= t ".text.faq_link", faq_link: archive_faqs_url %>
<% end %>
