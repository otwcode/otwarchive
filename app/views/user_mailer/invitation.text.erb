<% content_for :message do %>
<%= t 'user_mailer.invitation.greeting', app_name: ArchiveConfig.APP_NAME %>

<% if !@user_name.blank? %>
<%= t 'user_mailer.invitation.has_invited', user_name: @user_name %>
<% else %>
<%= t 'user_mailer.invitation.been_invited' %>
<% end %>

<%= t 'user_mailer.invitation.para1' %>

<%= t 'user_mailer.invitation.para2' %>

<%= t 'user_mailer.invitation.para3' %>
<%= signup_url(:invitation_token => @invitation.token) %>

<%= t 'user_mailer.invitation.text.faq_link' %> <%= archive_faqs_url %>.
<% end %>