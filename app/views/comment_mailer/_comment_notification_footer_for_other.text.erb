<% if @comment.unreviewed? %>
  <% if @owner && @comment.ultimate_parent.is_a?(Work) %>
<%= t(".unreviewed.work_owner") %>
  <% elsif @comment.ultimate_parent.is_a?(AdminPost) %>
<%= t(".unreviewed.admin_post") %>
  <% else %>
<%= t(".unreviewed.work") %>
  <% end %>

<% end %>
<% if @comment.unreviewed? && @owner %>
<%= t(".review.text", title: @comment.ultimate_parent.commentable_name, url: polymorphic_url([:unreviewed, @comment.ultimate_parent, :comments])) %>
<% end %>
<% unless @noreply || @comment.unreviewed? %>
<%= t(".reply.text", url: comment_url(@comment, :add_comment_reply_id => @comment.id)) %>
<% end %>
<%= t(".comment_thread.text", url: comment_url(@comment)) %>
<% unless @comment.id == @comment.thread %>
<%= t(".parent_thread.text", url: comment_url(:id => @comment.thread)) %>
<% end %>
<% if @comment.parent.kind_of?(Chapter) && @comment.parent.work.chaptered? %>
<%= t(".read_all.chapter.text", position: @comment.parent.position, title: @comment.ultimate_parent.commentable_name,
      url: work_chapter_url(@comment.parent.work, @comment.parent, show_comments: true, anchor: :comments)) %>
<% else %>
<%= t(".read_all.other.text", title: @comment.ultimate_parent.commentable_name,
      url: polymorphic_url(@comment.ultimate_parent, view_full_work: true, show_comments: true, anchor: :comments)) %>
<% end %>
