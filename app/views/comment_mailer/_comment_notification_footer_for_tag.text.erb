<% unless @noreply %>
<%= t(".reply.text", url: comment_url(@comment, add_comment_reply_id: @comment.id)) %>
<% end %>
<%= t(".comment_thread.text", url: comment_url(@comment)) %>
<% unless @comment.id == @comment.thread %>
<%= t(".parent_thread.text", url: comment_url(@comment.thread)) %>
<% end %>
<%= t(".read_all_comments.text", tag: @comment.ultimate_parent.commentable_name, url: tag_comments_url(@comment.ultimate_parent)) %>
