<% unless @noreply %>
  <%= style_link(t(".reply.html"), comment_url(@comment, add_comment_reply_id: @comment.id)) %>
  <br />
<% end %>

<%= style_link(t(".comment_thread.html"), comment_url(@comment)) %>
<br />

<% unless @comment.id == @comment.thread %>
  <%= style_link(t(".parent_thread.html"), comment_url(@comment.thread)) %>
  <br />
<% end %>

<%= style_link(t(".read_all_comments.html", tag: @comment.ultimate_parent.commentable_name),
      tag_comments_url(@comment.ultimate_parent)) %>
