<%= text_divider %>
<%= t(".posted", datetime: @comment.created_at) %>
<% unless @comment.edited_at.blank? %>
<%= t(".last_edited", datetime: @comment.edited_at) %>
<% end %>

<%# erb_lint:disable ExtraNewline %>

<% if @comment.ultimate_parent.is_a?(Tag) %>
<%= render 'comment_mailer/comment_notification_footer_for_tag', formats: [:text] -%>
<% else %>
<%= render 'comment_mailer/comment_notification_footer_for_other', formats: [:text] -%>
<% end %>
