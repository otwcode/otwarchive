  <%# i18n-tasks-use t("comment_mailer.comment_reply_sent_notification.content.work_html") %>
  <%= content_for_commentable_html(@comment) %>

  <p>
    <%= commenter_pseud_or_name_link(@parent_comment) %> wrote:
    <%= style_quote(raw(@parent_comment.sanitized_mailer_content)) %>
