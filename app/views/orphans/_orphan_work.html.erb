<!--/subnav-->

<!--main content-->
<%= form_tag orphans_path do %>
  
  <%= render 'orphans/choose_pseud' %>
  
  <p>
    <% works.each_with_index do |work, index| %><%= hidden_field_tag "work_ids[]", work.id, :id => "work_ids_#{index}" %><% end %>
  </p>
  
  <p class="submit actions"><%= submit_tag ts("Yes, I'm sure") %></p>
<% end %>
