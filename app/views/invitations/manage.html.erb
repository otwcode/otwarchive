<!--Descriptive page name, messages and instructions-->
<h2 class="heading"><%= logged_in_as_admin? ? (@user.login + "'s") : "Your" %> Invitations</h2>
<!--/descriptions-->

<!--subnav -->
<h3 class="landmark heading">Actions</h3>
<ul class="navigation actions" role="navigation">
  <li><h4 class="heading"><%= ts("Manage:") %></h4></li>
  <li>
    <%= span_if_current("unsent (#{@user.invitations.unsent.count.to_s})", 
      manage_user_invitations_path(@user, :status => :unsent)) %>
  </li>
  <li>
    <%= span_if_current("sent but not used (#{@user.invitations.unredeemed.count.to_s})", 
      manage_user_invitations_path(@user, :status => :unredeemed)) %>
  </li>
  <li>
    <%= span_if_current("used (#{@user.invitations.redeemed.count.to_s})", 
      manage_user_invitations_path(@user, :status => :redeemed)) %>
  </li>
  <li class="last">
    <%= link_to 'all', manage_user_invitations_path(@user) %>
  </li>
</ul>

<ul class="navigation actions" role="navigation">
   <li><%= span_if_current t('.invitations', :default =>"Invitations"), user_invitations_path(@user) %></li>
   <li><%= span_if_current "Manage invitations", {:controller => :invitations, :action => :manage, :user_id => @user.login} %></li>
   <li><%= span_if_current "Request more", new_user_invite_request_path %></li>
</ul>

<!--/subnav-->

<!--main content-->
<%= render :partial => 'invitations/user_invitations', :locals => {:invitations => @invitations} %>
<!--/content-->